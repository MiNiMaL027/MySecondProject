@using MySecondProjectWEB.Views.ViewHelpsModel;
@using List_Domain.Exeptions;
@model ContentStorageModel;

<h2>Updating the list</h2>

<form method="post" id="my-form" action="/Home/UpdateList">

    <label for="currentList">List for update:</label><br />
    <select class="form-select" aria-label="Default select example" name="listId">

        @foreach(var list in Model.CustomLists)
        {
            <option value="@list.Id">@list.Name</option>
        }

    </select> <br />
    <h3 for="updateList">Update data:</h3> <br />
    <label for="updateList">List name:</label><br />

    <input class="form-control" placeholder="ListName" type="text" name="Name" />
    <br /><br />
    <p>
        <input class="btn btn-light" type="submit" value="Update" />
    </p>

</form>
