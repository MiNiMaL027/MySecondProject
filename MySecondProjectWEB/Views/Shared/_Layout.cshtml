@using List_Domain.ViewModel;
@using List_Service.Interfaces;
@{
    ViewData["Title"] = "Home";
}
<!DOCTYPE html>

<style>

    .leftEmpty-div {
        margin-left: 20px;
    }
    #bottom {
        margin-bottom: 100px;
    }

    .leftPosition-div {
        position: fixed;
        top: 0;
        right: 0;
        margin-right: 20px;
    }
    .textWithoutLine-a{
        text-decoration: none;
        color: black;
    }
    .line{
        border-right: 2px solid black;
        border-top: 2px solid black;
        border-bottom: 2px solid black;
        background-color: whitesmoke;
        padding: 20px;
    }
    .nav {
        border: 2px solid grey;
        background-color: #333;
        color: #fff;
        padding: 0px;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 999;
    }

</style>

<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="nav" style="background-color: black">
        <div class="leftEmpty-div">
            <a class="textWithoutLine-a" href="/Home/HomePage">
                <h2 style="color:white; font-family: 'KarollaC';">ToDoList</h2>
            </a>
        </div>
        <div class="leftPosition-div"><a style="font-size: 20px" class="link-light" href="/Login/SignOut">SignOut </a> || <a style="font-size: 20px" class="link-light" href="/Profil/Profil">Profil</a></div>
    </div>
    <br />
    <br />

    <div>
        @RenderBody()
    </div>
    <footer style="float: left">
    <div class="line">
        @RenderSection("Lists", false)
    </div>
    </footer>
    <footer style="display: flex; align-items: center">
        <div style="flex : 1; text-align: center">
             @RenderSection("Tasks", false)<br />
        </div>
    </footer>
</body>
</html>
